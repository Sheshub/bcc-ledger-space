      bcc-ledger-core,
      bcc-prelude-test,
      bcc-prelude,
      bcc-protocol-toptimum,
      bcc-slotting,
      cborg,
      containers,
      data-default-class,
      groups,
      hedgehog >= 1.0.4,
      hedgehog-quickcheck,
      iproute,
      prettyprinter,
      QuickCheck,
      scientific,
      sophie-spec-ledger-test,
      sophie-spec-ledger,
      small-steps-test,
      small-steps,
      strict-containers,
      tasty-hedgehog,
      tasty-hunit,
      tasty-quickcheck,
      tasty,
      time,
      transformers,
      tree-diff


benchmark mainbench
  import:             base, project-config

  type:             exitcode-stdio-1.0
  hs-source-dirs:
    bench
    test
  main-is:          Main.hs
  other-modules:
    Bench.Control.Iterate.SetAlgebra.Bimap,
    BenchUTxOAggregate,
    BenchValidation,
    Sophie.Spec.Ledger.Bench.Gen
    Sophie.Spec.Ledger.Bench.Rewards
    Test.Sophie.Spec.Ledger.Examples.Cast

  build-depends:
    bytestring,
    bcc-crypto-class,
    bcc-crypto-optimum,
    bcc-ledger-core,
    bcc-prelude,
    bcc-protocol-toptimum,
    bcc-slotting,
    containers,
    criterion,
    data-default-class,
    deepseq,
    mtl,
    QuickCheck,
    sophie-spec-ledger-test,
    sophie-spec-ledger,
    small-steps,
    small-steps-test,
    strict-containers,
    transformers
  ghc-options:
      -threaded
      -rtsopts
      -with-rtsopts=-N
      -O